                        Value="Transparent" />
                <Setter Property="Foreground"
                        Value="{DynamicResource PrimaryControlForeground}" />
                <Setter Property="BorderBrush"
                        Value="Transparent" />
                <Setter Property="BorderThickness"
                        Value="0" />
            </Trigger>
        </Style.Triggers>
    </Style>

